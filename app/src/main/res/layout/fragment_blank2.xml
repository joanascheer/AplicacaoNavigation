<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Fragment2Constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvfragment2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_2_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview_2"
            app:layout_constraintTop_toBottomOf="@id/tvfragment2Name"
            android:layout_margin="20dp"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/et1f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            android:layout_margin="20dp"
            android:hint="aqui vai um int"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/et2f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et1f2"
            android:layout_margin="20dp"
            android:hint="aqui vai um boolean"
            android:inputType="text"
            />

        <Button
            android:id="@+id/btn1f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et2f2"
            android:layout_margin="24dp"
            android:text="vai pra fragment 3"
            />

        <Button
            android:id="@+id/btn2f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn1f2"
            android:layout_margin="24dp"
            android:text="vai pra fragment 1"
            />

        <TextView
            android:id="@+id/tvNumero2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="200sp"
            android:text="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn2f2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>